# ============================================
# КОНФИГУРАЦИЯ СЕРВЕРА
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# БАЗА ДАННЫХ
# ============================================


# PostgreSQL (если используется)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=site_test
DB_USER=postgres
DB_PASSWORD=postgres

# SQLite (текущая конфигурация)
DB_TYPE=sqlite
DB_PATH=./src/server/data/database.sqlite

# ============================================
# JWT АВТОРИЗАЦИЯ
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# WEBSOCKET
# ============================================
WS_PORT=3001
WS_PATH=/ws
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_DELAY=5000

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ============================================
# ЗАГРУЗКА ФАЙЛОВ
# ============================================
UPLOAD_DIR=./src/server/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# EMAIL (для отправки писем)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@site_test.com

# ============================================
# FIREBASE (если используется)
# ============================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-project.iam.gserviceaccount.com

# ============================================
# ЛОГИРОВАНИЕ
# ============================================
LOG_LEVEL=info
LOG_FILE=./logs/site.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# ============================================
# БЕЗОПАСНОСТЬ
# ============================================
SESSION_SECRET=your-session-secret-change-this-in-production
CSRF_SECRET=your-csrf-secret-change-this-in-production
BCRYPT_ROUNDS=10

# ============================================
# АДМИН ПАНЕЛЬ
# ============================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# ============================================
# ТАРИФЫ И ПЛАТЕЖИ
# ============================================
CURRENCY=RUB
PAYMENT_PROVIDER=stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# ============================================
# API КЛЮЧИ
# ============================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# ============================================
# ФРОНТЕНД
# ============================================
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3000/api

# ============================================
# РАЗРАБОТКА
# ============================================
DEBUG=true
HOT_RELOAD=true
SOURCE_MAP=true
